<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>AgendaJDBC</display-name>
  <context-param>
    <param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>
 <welcome-file-list>
		<welcome-file>Login.xhtml</welcome-file>	
	</welcome-file-list>
 
  <filter>
    <display-name>ControleDeAcesso</display-name>
    <filter-name>ControleDeAcesso</filter-name>
    <filter-class>agenda.filtros.ControleDeAcesso</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ControleDeAcesso</filter-name>
    <url-pattern>/ControleDeAcesso</url-pattern>
  </filter-mapping>
    <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
</web-app>